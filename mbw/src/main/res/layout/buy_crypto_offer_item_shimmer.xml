<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/buy_crypto_offer_background"
    android:padding="16dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/iconShimmer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/shimmer_placeholder_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_base_alpha="1"
        app:shimmer_base_color="#3B3B3B"
        app:shimmer_colored="true"
        app:shimmer_highlight_color="#8D8D8D" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconShimmer"
        app:layout_constraintTop_toTopOf="parent">


        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:layout_marginVertical="3dp"
            android:background="@drawable/shimmer_placeholder_rectangle"
            app:shimmer_base_alpha="1"
            app:shimmer_base_color="#3B3B3B"
            app:shimmer_colored="true"
            app:shimmer_highlight_color="#8D8D8D" />


        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/shimmer_placeholder_rectangle"
            app:shimmer_base_alpha="1"
            app:shimmer_base_color="#3B3B3B"
            app:shimmer_colored="true"
            app:shimmer_highlight_color="#8D8D8D" />
    </LinearLayout>


    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="120dp"
        android:layout_height="16dp"
        android:background="@drawable/shimmer_placeholder_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_base_alpha="1"
        app:shimmer_base_color="#3B3B3B"
        app:shimmer_colored="true"
        app:shimmer_highlight_color="#8D8D8D" />
</androidx.constraintlayout.widget.ConstraintLayout>
