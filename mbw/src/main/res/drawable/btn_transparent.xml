<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#898989" />
            <solid android:color="#1A898989" />
            <corners android:radius="2dp" />
            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/grey" />
            <solid android:color="@color/darkgrey" />
            <corners android:radius="2dp" />
            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#898989" />
            <solid android:color="@color/transparent" />
            <corners android:radius="2dp" />
            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape>
    </item>

</selector>